<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/parent_layout">

    <TextView
        android:id="@+id/combat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"
        app:layout_constraintRight_toLeftOf="@+id/combat_number_label"
        android:text="NAME OF COMBAT"
        android:textColor="#000"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/combat_character_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/combat_number_label"
        app:layout_constraintLeft_toLeftOf="@+id/combat_number_label"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:text="NU"
        android:textColor="#000"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/combat_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/combat_character_count"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:text="Characters"
        android:textSize="14dp"
        android:textColor="#000"
        />

</android.support.constraint.ConstraintLayout>